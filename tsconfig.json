{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
} 